<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_gravity="end"
        android:background="@drawable/sharelylogo"/>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="134dp"
        android:orientation="vertical"
        android:layout_marginLeft="20dp">

        <TextView
            android:id="@+id/welcomeTxt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Welcome to"
            android:textColor="#1670bc"
            android:textSize="45dp"/>

        <TextView
            android:id="@+id/welcomeTxt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#1670bc"
            android:layout_marginTop="-30dp"
            android:text="Sharely"
            android:textSize="55dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical"

>
        <EditText
            android:id="@+id/email_et"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:hint="Email"
            android:textColorHint="@android:color/white"
            android:paddingLeft="20dp"
            android:background="@drawable/roundcorneredit"/>

        <EditText
            android:id="@+id/password_et"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginTop="20dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColorHint="@android:color/white"
            android:paddingLeft="20dp"
            android:background="@drawable/roundcorneredit"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/save_login_details_checkbox"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:outlineSpotShadowColor="@android:color/black"
                android:shadowColor="#1670bc"/>

            <TextView
                android:id="@+id/save_login_details_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save Login Details"
                android:layout_marginLeft="5dp"
                android:textColor="@android:color/black"
                android:layout_gravity="center"/>
        </LinearLayout>

        <Button
            android:id="@+id/login_button"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:backgroundTint="#1670bc"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:background="@drawable/roundcorneredit"
            android:text="Login"/>

    </LinearLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/create_account_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CREATE ACCOUNT"
            android:textSize="17dp"
            android:textColor="#1670bc"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"/>

    </RelativeLayout>


</LinearLayout>